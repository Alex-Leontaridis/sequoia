{
  "manifest_version": 3,
  "name": "Sequoia",
  "version": "1.0.0",
  "description": "Automatically compresses ChatGPT and Claude AI messages for better efficiency",
  "permissions": [
    "activeTab", "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://*.chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://*.chat.openai.com/*",
    "https://claude.ai/*",
    "https://*.claude.ai/*",
    "http://localhost:8002/*"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://*.chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://*.chat.openai.com/*",
        "https://claude.ai/*",
        "https://*.claude.ai/*"
      ],
      "js": ["dist/content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "dist/popup.html",
    "default_title": "Sequoia - AI Message Compressor"
  },
  "icons": {
    "16": "assets/image.png",
    "48": "assets/image.png",
    "128": "assets/image.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["dist/injected.js"],
      "matches": [
        "https://chatgpt.com/*",
        "https://*.chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://*.chat.openai.com/*",
        "https://claude.ai/*",
        "https://*.claude.ai/*"
      ]
    }
  ]
} 